{
	"compilerOptions": {
		"noFallthroughCasesInSwitch": true,
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"outDir": "./dist",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react"
	},
	"exclude": [
		".git",
		".app-cache",
		".npm",
		".npm-tmp",
		"src",
		"node_modules",
		"subfolder/dist",
		"subfolder/node_modules",
		"**/node_modules/*",
		"server/api/premiumX",
		"server/api/premiumX/*",
		"vite.config.mts"
	],
	"include": [
		"preload.ts",
		"electron.ts",
		"huds.ts",
		"overlay.ts",
		"interfaces.ts",
	]
}
